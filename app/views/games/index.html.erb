<div class="row">
  <div class="col-md-12">
    <p id="notice"><%= notice %></p>

    <h1>Juegos</h1>
    <br>
    <br>
    <table class="table text-center">
      <thead>
        <tr>
          <th class="text-center">Local</th>
          <th class="text-center">Visitante</th>
          <th class="text-center">DÃ­a de Juego</th>
          <th class="text-center">Semana</th>
          <th class="text-center">Temporada</th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
        <tr>
          <td><%= @teams.where(id: game.home_team).first.name %><br><b><%= game.home_team_score %></b></td>
          <td><%= @teams.where(id: game.away_team).first.name %><br><b><%= game.away_team_score %></b></td>
          <td><%= game.scheduled_at.strftime("%B %d, %Y, %A") %></td>
          <td><%= game.week %></td>
          <td><%= game.season %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Game', new_game_path %>

  </div>
</div>
